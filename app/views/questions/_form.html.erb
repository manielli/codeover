<%= form_with(model: @question, local: true) do |f|  %>

    <% if @question.errors.present? %>
        <p class="form-errors">
            <%= @question.errors.full_messages.join(", ") %>
        </p>
    <% end %>
    
    <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>

    <div>
        <%= f.label :points %>
        <%= f.text_field :points %>
    </div>

<% end %>